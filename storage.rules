rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
service firebase.storage {
  match /b/{bucket}/o {
    // Rules for profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true; // Profile pictures can be read by anyone
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for student ID uploads
    match /student-ids/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for room images
    match /room-images/{userId}/{allPaths=**} {
      allow read: if true; // Room images can be read by anyone
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}